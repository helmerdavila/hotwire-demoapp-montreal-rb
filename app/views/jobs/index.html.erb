<h1>List of jobs</h1>
<%= link_to 'Create new job', new_job_path %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Tag</th>
    </tr>
  </thead>
  <tbody>
  <% @jobs.each do |j| %>
    <tr>
      <td><%= j.name %></td>
      <td><%= j.status %></td>
      <td><%= j.tag.name %></td>
    </tr>
  <% end %>
  </tbody>
</table>
